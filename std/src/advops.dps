module std/advops;

enum AdvOps {
    Sqrt,
    Sin,
    Cos,
    Tan,
    Asin,
    Acos,
    Atan,
}

#[cmd("data advops storage %% %% %%")]
facade fn advops(#[id(storage)] storage: Identifier, pat: NBTPath, op: AdvOps);

pub fn sqrt(num: float) -> float {
    const stor = id: "dpscript:temp/ops/sqrt";
    const pat = path: "temp_val";

    set_data(stor, pat, num);
    advops(stor, pat, AdvOps::Sqrt);

    return get_data(stor, pat);
}

